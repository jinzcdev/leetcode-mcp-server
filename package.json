{
    "name": "@jinzcdev/mcp-server-leetcode",
    "description": "MCP Server for LeetCode API (supports leetcode.com and leetcode.cn)",
    "version": "0.1.0",
    "author": "jinzcdev",
    "main": "./build/index.js",
    "keywords": [
        "leetcode",
        "lc",
        "mcp",
        "programming",
        "algorithm"
    ],
    "scripts": {
        "test": "vitest run",
        "test:watch": "vitest watch",
        "build": "tsc && chmod u+x build/index.js",
        "start": "node build/index.js",
        "dev": "tsc-watch --onSuccess \"node build/index.js\"",
        "format": "prettier --write . --ignore-path .gitignore",
        "prepare": "husky"
    },
    "bin": {
        "mcp-server-leetcode": "./build/index.js"
    },
    "type": "module",
    "files": [
        "build"
    ],
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/jinzcdev/mcp-server-leetcode.git"
    },
    "lint-staged": {
        "*.{js,ts}": [
            "prettier --write",
            "eslint --fix"
        ]
    },
    "dependencies": {
        "@modelcontextprotocol/sdk": "^1.8.0",
        "leetcode-query": "^2.0.0",
        "minimist": "^1.2.8",
        "ts-node": "^10.9.2",
        "zod": "^3.24.2"
    },
    "devDependencies": {
        "@eslint/js": "^9.24.0",
        "@types/minimist": "^1.2.5",
        "@types/node": "^22.14.0",
        "eslint": "^9.24.0",
        "eslint-config-prettier": "^10.1.2",
        "eslint-plugin-prettier": "^5.2.6",
        "globals": "^16.0.0",
        "husky": "^9.1.7",
        "lint-staged": "^15.5.1",
        "prettier": "^3.5.3",
        "prettier-plugin-organize-imports": "^4.1.0",
        "tsc-watch": "6.2.1",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.29.1",
        "vitest": "^1.6.1"
    }
}
